spring.application.name=api
server.port=8081

# Altera a estrutura da tabela caso a entidade tenha mudanças.
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

# Acesso ao banco de dados
spring.datasource.url=jdbc:mysql://${MYSQL_HOST:localhost}:3306/digite_o_nome_do_DB

# Usuário do banco de dados
spring.datasource.username=digite_o_usuario

# Senha do banco de dados
spring.datasource.password=digite_a_senha